@model IEnumerable<Assignment5.Models.Song>

@{
    ViewData["Title"] = "Admin Songs";
}

<h1>Songs Admin</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
               Genre ID
            </th>
            <th>
                Artist ID
            </th>
            <th>
                Song Title
            </th>
            <th>
                Artist Title
            </th>
            <th>
                Price
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.genreID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.artistID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.songTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.artistTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.songID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.songID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.songID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
