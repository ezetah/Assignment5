@model Assignment5.Models.Song

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Song</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Html.DisplayFor(model => model.songTitle)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Genre ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.genreID)
        </dd>
        <dt class="col-sm-2">
            Artist ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.artistID)
        </dd>
        <dt class="col-sm-2">
            Song Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.songTitle)
        </dd>
        <dt class="col-sm-2">
            Artist Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.artistTitle)
        </dd>
        <dt class="col-sm-2">
            Song Price:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="songID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
