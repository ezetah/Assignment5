@model Assignment5.Models.Artist

@{
    ViewData["Title"] = "Create";
}

<h1>Create Artist</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="genreID" class="control-label">Genre Id</label>
                <input asp-for="genreID" class="form-control" />
                <span asp-validation-for="genreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="artistTitle" class="control-label">Artist Title</label>
                <input asp-for="artistTitle" class="form-control" />
                <span asp-validation-for="artistTitle" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top : 10px">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
