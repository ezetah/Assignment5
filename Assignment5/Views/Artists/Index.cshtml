@model IEnumerable<Assignment5.Models.Artist>

@{
    ViewData["Title"] = "Artists Admin";
}

<h1>Artist Admin</h1>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Genre ID
            </th>
            <th>
                Artist Name
            </th><th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.genreID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.artistTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.artistID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.artistID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.artistID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>